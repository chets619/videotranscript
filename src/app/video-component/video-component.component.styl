@import '../../colors.styl';

.app-wrapper
    max-height 95vh
    .title-card
        padding 1.2rem
        .title-container
            text-align center
        .help-icon
            position fixed
            right 3%
            top 7%
            font-size 1.4rem
            color #0062cc
            cursor pointer
        .select-video-container
            margin 3.5rem 0
            padding 1rem 0.5rem
            flex-direction column
            border solid 1px $tertiaryColor
            border-radius 15px
            .desc-text
                padding-bottom 2rem
        .video-subtitle-container
            margin 3.5rem 0
            padding 0
            &.subtitle-loaded
                margin 0
            .video-container
                border-right solid 1px $tertiaryColor
                .color-red
                    color red
                    font-weight 500
                video
                    width 100%
                .button-container
                    height 10vh
                    justify-content space-around
                    .disabled
                        opacity 0.8
                        pointer-events none
            .subtitle-container
                .btn-container-sub
                    justify-content space-around
                    flex-direction column
                    height 50%
                    .btn-primary
                        min-width 30%
                        font-size 0.8rem

    .editor-wrapper
        .subtitle-collection
            border solid 1px $tertiaryColor
            height 55vh
            overflow auto
            .subtitle-header
                margin auto
                text-align center
                padding-top 0.5rem
                padding-bottom 0.5rem
                font-weight 800
        .editor-container
            height 10vh
        .text-container
            height 15vh
            .text
                justify-content space-around
                textarea
                    width 100%
    
.transcript-wrapper
    position absolute
    top 10%
    left 25%
    transition left 1s ease
    &.hide
        left 100%
    .tab-anchor
        border solid 1px red
        height 40px
        width 20px
        position absolute
        top 50%
        left -20px
        cursor pointer
        background red
        opacity 0.9
        color white
    .transcript-tab
        width 50vw
        height 80vh
        padding 1.5rem
        border solid 1px #333
        background #0062cc
        border-radius 8px
        color white
        .trans-desc
            justify-content space-between
            padding-top 1rem
        .transcript
            padding-top 1rem
            textarea
                width 100%
                height 50vh
            .another-div
                padding-top 0.8rem

.help-div
    position absolute
    top 10%
    left 25%
    transition opacity 1s ease
    opacity 0
    z-index -1
    background #B9D4FD
    &.visible
        opacity 1
        z-index 1
    .fa-close
        position absolute
        right 2%
        top 2%
        font-size 1.3rem
        cursor pointer
    .help-desc
        padding-top 10px
    .help-tab
        width 50vw
        padding 1.5rem
        border solid 1px #333