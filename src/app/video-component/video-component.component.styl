@import '../../colors.styl';

.app-wrapper
    max-height 95vh
    .title-card
        padding 1.2rem
        .title-container
            text-align center
        .select-video-container
            margin 3.5rem 0
            padding 1rem 0.5rem
            flex-direction column
            border solid 1px $tertiaryColor
            border-radius 15px
            .desc-text
                padding-bottom 2rem
        .video-subtitle-container
            margin 3.5rem 0
            padding 0
            &.subtitle-loaded
                margin 0
            .video-container
                border-right solid 1px $tertiaryColor
                video
                    width 100%
                .button-container
                    height 10vh
                    justify-content space-around
            .subtitle-container
                .btn-container-sub
                    justify-content space-around
                    flex-direction column
                    height 50%
                    .btn-primary
                        min-width 30%
                        font-size 0.8rem

    .editor-wrapper
        .subtitle-collection
            border solid 1px $tertiaryColor
            height 55vh
            overflow auto
            .subtitle-header
                margin auto
                text-align center
                padding-top 0.5rem
                padding-bottom 0.5rem
                font-weight 800
        .editor-container
            height 10vh
        .text-container
            height 15vh
            .text
                justify-content space-around
                textarea
                    width 100%
    
.transcript-wrapper
    position absolute
    top 10%
    left 25%
    transition left 1s ease
    &.hide
        left 100%
    .tab-anchor
        border solid 1px red
        height 40px
        width 20px
        position absolute
        top 50%
        left -20px
        cursor pointer
        background red
        opacity 0.9
        color white
    .transcript-tab
        width 50vw
        height 80vh
        padding 1.5rem
        border solid 1px black
        background blue
        .trans-desc
            justify-content space-between
            padding-top 1rem
        .transcript
            padding-top 1rem
            textarea
                width 100%